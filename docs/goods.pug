include header

div(class='wrap')
    div(class='content')
        header(class='site-header')
            include site_header
        

        div(class='container')
            div(class='row')
                div(class='col col-md-12')
                    h2(class='panel-title') #{goods[0]['name']}
                div(class='col col-md-5')
                    img(
                        src='images/'+goods[0]['image']
                        class='goods-big-image'
                    )
                div(class='col col-md-7')
                    p #{goods[0]['meaning']}
                    span(class='success') Цена: #{goods[0]['cost']} рублей 
                    button(
                        class='button-success add-to-cart'
                        data-goods_id=goods[0]['id']
                    ) в корзину
        include nav
    include footer